# Sponge Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# API endpoint for the Sponge backend
# Local development: http://localhost:54321/functions/v1/api
# Production: https://<project-ref>.supabase.co/functions/v1/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:54321/functions/v1/api

# =============================================================================
# Deployment (GitHub Pages)
# =============================================================================

# When deploying to GitHub Pages, set this to your production API URL
# NEXT_PUBLIC_API_BASE_URL=https://xyz.supabase.co/functions/v1/api

# For GitHub Pages with custom domain:
# NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com/functions/v1/api
