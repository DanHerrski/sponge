# Sponge Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# FRONTEND (Vite/React)
# =============================================================================

# API endpoint for the Sponge backend
# Local development: http://localhost:54321/functions/v1/api
# Production: https://<project-ref>.supabase.co/functions/v1/api
VITE_API_BASE_URL=http://localhost:54321/functions/v1/api

# Supabase public credentials (safe for frontend)
# Only needed if using Supabase Auth or Realtime in frontend
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# BACKEND (Edge Functions / Local Dev)
# =============================================================================

# Supabase project URL
# Local: http://localhost:54321
# Production: https://<project-ref>.supabase.co
SUPABASE_URL=http://localhost:54321

# Supabase service role key (NEVER expose in frontend!)
# Bypasses Row Level Security - server use only
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# LLM PROVIDERS
# =============================================================================

# OpenAI API key for extraction/scoring
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Optional: Anthropic API key (alternative provider)
# Get from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# LLM provider selection: "openai", "anthropic", or "stub" (for testing)
LLM_PROVIDER=stub

# Model to use for extraction/scoring
# OpenAI: gpt-4o-mini, gpt-4o, gpt-4-turbo
# Anthropic: claude-3-haiku-20240307, claude-3-sonnet-20240229
LLM_MODEL=gpt-4o-mini

# =============================================================================
# DATABASE (Local Development Only)
# =============================================================================

# Direct database connection (for migrations, admin tasks)
# Not needed for Edge Functions (they use SUPABASE_URL + SERVICE_ROLE_KEY)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable debug logging
DEBUG=false

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
